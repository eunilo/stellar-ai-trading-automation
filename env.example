# Stellar AI Trading Automation - Environment Variables
# Copy this file to .env and configure your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stellar_defi
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_SYNC=true
DB_LOGGING=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# STELLAR BLOCKCHAIN CONFIGURATION
# =============================================================================
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_FRIEND_BOT_URL=https://friendbot.stellar.org

# =============================================================================
# SOROSWAP CONFIGURATION
# =============================================================================
SOROSWAP_API_URL=https://api.soroswap.finance
SOROSWAP_API_KEY=your_soroswap_api_key_here
SOROSWAP_SLIPPAGE_TOLERANCE=0.5
SOROSWAP_DEADLINE=300

# =============================================================================
# DEFINDEX CONFIGURATION
# =============================================================================
DEFINDEX_API_URL=https://api.defindex.finance
DEFINDEX_API_KEY=your_defindex_api_key_here

# =============================================================================
# REFLECTOR ORACLE CONFIGURATION
# =============================================================================
REFLECTOR_API_URL=https://api.reflector.finance
REFLECTOR_API_KEY=your_reflector_api_key_here

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
AI_MODEL_PATH=./models
AI_TRAINING_DATA_PATH=./data
AI_PREDICTION_INTERVAL=60000
AI_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your_encryption_key_here_32_chars
BCRYPT_ROUNDS=12

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
DEFAULT_TRADING_PAIR=XLM/USDC
MIN_TRADE_AMOUNT=10
MAX_TRADE_AMOUNT=10000
TRADING_FEE_PERCENTAGE=0.3

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================
GRID_STRATEGY_ENABLED=true
DCA_STRATEGY_ENABLED=true
MOMENTUM_STRATEGY_ENABLED=true
ARBITRAGE_STRATEGY_ENABLED=true

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_ENABLED=true
WS_PORT=3001
WS_CORS_ORIGIN=*

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# EXTERNAL APIs
# =============================================================================
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production
# NODE_ENV=production
# DB_SSL=true
# REDIS_SSL=true
# ENABLE_SWAGGER=false
